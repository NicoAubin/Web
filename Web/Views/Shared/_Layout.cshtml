<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
	<link href="~/lib/datatables.bootstrap5/dist/css/datatables.bootstrap5.css" rel="stylesheet" />
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="shortcut icon" href="img/icons/icon-48x48.png" />
	<link href="css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery-datatable/jquery.datatable.js"></script>
	<script src="~/lib/datatables.bootstrap5/dist/js/datatable.bootstrap5.js"></script>


	<div class="wrapper">
		<nav id="sidebar" class="sidebar js-sidebar">
			<div class="sidebar-content js-simplebar">
				<a class="sidebar-brand" href="index.html">
					<span class="align-middle">Curso Educacion IT</span>
				</a>

				<ul class="sidebar-nav">
					<li class="sidebar-header">
						Paginas
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" asp-controller="Home" asp-action="Index">
							<i class="align-middle" data-feather="home"></i> <span class="align-middle">Inicio</span>
						</a>
					</li>
					
					<li class="sidebar-item active">
						<a class="sidebar-link" href="#">
							<i class="align-middle" data-feather="user"></i> <span class="align-middle">Usuarios</span>
						</a>
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" href="#">
							<i class="align-middle" data-feather="search"></i> <span class="align-middle">Roles</span>
						</a>
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" asp-controller="Productos" asp-action="Productos">
							<i class="align-middle" data-feather="archive"></i> <span class="align-middle">Productos</span>
						</a>
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" href="#">
							<i class="align-middle" data-feather="hard-drive"></i> <span class="align-middle">Servicios</span>
						</a>
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" href="#">
							<i class="align-middle" data-feather="log-out"></i> <span class="align-middle">Chat</span>
						</a>
					</li>

					<li class="sidebar-item active">
						<a class="sidebar-link" href="#" >
							<i class="align-middle" data-feather="log-out"></i> <span class="align-middle">Cerrar Sesion</span>
						</a>
					</li>

				</ul>

				<div class="sidebar-cta">
				</div>
			</div>
		</nav>

		<div class="main">
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<a class="sidebar-toggle js-sidebar-toggle">
					<i class="hamburger align-self-center"></i>
				</a>

			</nav>

			<main class="content">
				<div class="container-fluid p-0">
					@RenderBody()
				</div>
			</main>

		</div>
	</div>

	<div class="container">
		<main role="main" class="pb-3">

		</main>
	</div>


	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
